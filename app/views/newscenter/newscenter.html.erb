<% @imgurl="/images/xwzx.jpg" %>
<div id = "leftmenu">
  <table width="200" cellpadding="0" cellspacing="0" border="0">
  <tr>
    <td id="menutop1" height="8" width="200"><img src="/images/memu_r1_c1.jpg" width="200" height="8"></td>
  </tr>
  <tr style="cursor:pointer">
    <td id="menutop2" height="20" width="200" align="left" background="/images/memu_r2_c1.jpg" style="color:#FFFFFF;font-weight:bold;" onMouseOver="change('menutop2','/images/memu_r6_c1.jpg');" onmouseout="recover('menutop2');">&nbsp;&nbsp;&nbsp;新闻中心</td>
  </tr>
    <% 
    for newscenter in @newscenter 
    %>
  <tr align="left" style="cursor:pointer">
    <td name="paremenu" id="<%=newscenter.categoryid%>" width="200" height="20" background="/images/memu_r9_c1.jpg" onMouseOver="change('<%=newscenter.categoryid%>','/images/memu_r6_c1.jpg');" onmouseout="recover('<%=newscenter.categoryid%>');" onclick="show1('child<%=newscenter.categoryid%>','<%=newscenter.categoryid%>','<%=newscenter.url%>')">
    &nbsp;&nbsp;&nbsp;<%=newscenter.categoryname%>
    </td>
  </tr>
  <tr name="childmenu" id="child<%=newscenter.categoryid%>" style="display:none">
    <td>
      <table width="200" cellpadding="0" cellspacing="0" border="0">
        <% for newscenterdetail in Category.find(:all,:conditions => "substring(categoryid,1,6) = '" + newscenter.categoryid + "' and length(categoryid) = 9",:order => "categoryid") %>
          <tr align="left" style="cursor:pointer">
          <td name="childmenuitem" id="<%=newscenterdetail.categoryid%>" width="200" height="20" background="/images/memu_r3_c1.jpg" onMouseOver="change('<%=newscenterdetail.categoryid%>','/images/memu_r7_c1.jpg');" onmouseout="recover('<%=newscenterdetail.categoryid%>');" onclick="show2('<%=newscenterdetail.categoryid%>','<%=newscenterdetail.url%>')">
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=newscenterdetail.categoryname%>
          </td>
         </tr>  
        <% end %>
      </table>
     </td>
   </tr>
  <% end  %>
  <tr>
    <td id="menubuttom1" height="20" width="200"><img src="/images/memu_r9_c2.jpg" width="200" height="20"></td>
  </tr>
  <tr>
  <td id ="menubuttom2" width="200"><img src="/images/memu_r11_c1.jpg" width="200" height="7"></td>
  </tr>
</table>
</div>

<div id = "productcontent">
<iframe id="frame1" onload="this.height=this.contentWindow.document.body.scrollHeight;setTop()" frameborder="0" height="100%" width="550" name="pcontent" src="<%=@menu%>" scrolling="no"></iframe>
</div>

