  <table width="500" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td width="63"><img src="/images/note_r1_c1.gif" width="63" height="25"></td>
        <td width="100"><a href="mailto:'hr@bioer.com.cn'">hr@bioer.com.cn</a></td>
