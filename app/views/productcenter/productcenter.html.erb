          <td name="childmenuitem" id="<%=productcenterdetail.categoryid%>" width="200" height="20" background="/images/memu_r3_c1.jpg" onMouseOver="change('<%=productcenterdetail.categoryid%>','/images/memu_r7_c1.jpg');" onmouseout="recover('<%=productcenterdetail.categoryid%>');" onclick="show2('<%=productcenterdetail.categoryid%>','<%=productcenterdetail.url%>')">
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=productcenterdetail.categoryname%>
          </td>
         </tr>  
        <% end %>
      </table>
     </td>
   </tr>
  <% end  %>
  <tr>
    <td id="menubuttom1" height="20" width="200"><img src="/images/memu_r9_c2.jpg" width="200" height="20"></td>
  </tr>
  <tr>
  <td id ="menubuttom2" width="200"><img src="/images/memu_r11_c1.jpg" width="200" height="7"></td>
  </tr>
</table>
</div>

